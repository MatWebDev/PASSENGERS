<%# ---------------BANNER------------ %>
<h1>Some projects selected for you by PASSENGERS!</h1>
<h2> Hello <%= @user.first_name %>! Take a look at this awesome selection of projects!</h2>
<%# ---------------BANNER------------ %>
<div class="cartes">
  <%  @projects.each do |project| %>
    <%= link_to project_path(project) do %>
      <div class="carte">
        <h3><%= project.title %></h3>
        <p><%= project.description %></p>
      </div>
    <% end %>
  <% end %>
</div>
