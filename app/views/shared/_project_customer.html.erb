<div class="cartes">
  <h3>Take a look at this Freelancers selection powered by Passengers</h3>

  <% case @project.score_difficulty %>
  <% when 1 %>
    <% @junior_freelancers.each do |freelancer| %>
      <div class="carte">
        <p><strong><%= freelancer.first_name %> <%= freelancer.last_name %></strong></p>
        <%# ajouter photo %>
        <p><%= freelancer.skills.join(", ") %></p>
        <p><%= freelancer.description %></p>
      </div>
  <% end %>

  <% when 2 %>
    <% @junior_intermediate_freelancers.each do |freelancer| %>
      <div class="carte">
        <p><strong><%= freelancer.first_name %> <%= freelancer.last_name %></strong></p>
        <%# ajouter photo %>
        <p><%= freelancer.skills.join(", ") %></p>
        <p><%= freelancer.description %></p>
      </div>
  <% end %>

  <% when 3 %>
    <% @intermediate_freelancers.each do |freelancer| %>
      <div class="carte">
        <p><strong><%= freelancer.first_name %> <%= freelancer.last_name %></strong></p>
        <%# ajouter photo %>
        <p><%= freelancer.skills.join(", ") %></p>
        <p><%= freelancer.description %></p>
      </div>
  <% end %>

  <% when 4 %>
    <% @senior_freelancers.each do |freelancer| %>
      <div class="carte">
        <p><strong><%= freelancer.first_name %> <%= freelancer.last_name %></strong></p>
        <%# ajouter photo %>
        <p><%= freelancer.skills.join(", ") %></p>
        <p><em><%= freelancer.description %></em></p>
      </div>
    <% end %>
  <% end %>

  <h3>Collaborations</h3>
<div class="cartes">
    <% @collaborations.each do |collaboration| %>
      <div class="carte">
        <%= collaboration.title %>
        <%= collaboration.total_price %>
        <%= collaboration.status %>
        <%= link_to "Accept collab", project_collaboration_path(collaboration), data: {turbo_method: :patch} %>
      </div>
    <% end %>
    </div>
</div>
