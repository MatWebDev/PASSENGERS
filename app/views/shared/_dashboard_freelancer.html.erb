<div class="content">
  <div class="freelancer-card">
    <div class="firstinfo">
      <%= cl_image_tag current_user.photo.key, height: 150, width: 150, crop: :fill %>
      <div class="profileinfo">
        <h1>Welcome
          <%= current_user.first_name %>
          <%= current_user.last_name %>
        </h1>
         <p class="bio"><%= current_user.description %></p>
      </div>
    </div>
  </div>
</div>
  <div class="badgescard">
    <% current_user.skills.each do |skill|%>
      <% if skill == 'react' %>
      <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/react/react-original.svg" width="40"/>
      <% else %>
      <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/<%= skill %>/<%= skill %>-plain.svg" width="40" />
      <% end %>
    <% end %>
  </div>
<br>

<%= link_to "show the project", projects_path %>

<hr>
<h2>My Collaborate</h2>
<% @collaborations.each do |collaboration| %>
<div class="collab">
<div class="collab-img"></div>
<div class="status"><%= collaboration.status %></div>
<div class="title"><%= collaboration.title %></div>
<div class="price"><%= collaboration.total_price %>â‚¬</div>
</div>
<% end %>
