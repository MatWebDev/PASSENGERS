<%= link_to "show the project", projects_path %>
<div class="d-flex">
  <h1>Welcome
    <%= current_user.first_name %>
    <%= current_user.last_name %>
  </h1>
  </div>
<p class="mt-3"><%= current_user.description %></p>


<% current_user.skills.each do |skill|%>
  <% if skill == 'react' %>
  <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/react/react-original.svg" width="50"/>
  <% else %>
  <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/<%= skill %>/<%= skill %>-plain.svg" width="50" />
  <% end %>
<% end %>

<hr>
<h2>My Collaborate</h2>
<% @collaborations.each do |collaboration| %>
<div class="collab">
<div class="collab-img"></div>
<div class="status"><%= collaboration.status %></div>
<div class="title"><%= collaboration.title %></div>
<div class="price"><%= collaboration.total_price %>â‚¬</div>
</div>
<% end %>
