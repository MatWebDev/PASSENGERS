  <div class="freelancer-card">
    <div class="firstinfo">
      <div class="firstinfo-image">
        <%= cl_image_tag current_user.photo.key %>
      </div>
      <div class="profileinfo">
        <h1>Welcome
          <%= current_user.first_name %>
          <%= current_user.last_name %>
        </h1>
         <p class="bio"><%= current_user.description %></p>
      </div>
    </div>
  </div>
</div>
  <div class="badgescard">  
    <% current_user.skills.each do |skill|%>
      <% if skill == 'react' %>
      <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/react/react-original.svg" width="40"/>
      <% else %>
      <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/<%= skill %>/<%= skill %>-plain.svg" width="40" />
      <% end %>
    <% end %>
  </div>

<div class="free-projects">
  <h3>If you were honest when you subscribed on passengers, you will find suitables projects for you, by following this link</h3>
  <%= link_to "Find new projects", projects_path, class:"bouton-large" %>
</div>
  


<hr>
